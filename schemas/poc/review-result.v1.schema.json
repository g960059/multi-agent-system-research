{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/poc/review-result.v1.schema.json",
  "title": "Review Result v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": 1
    },
    "task_id": {
      "type": "string",
      "minLength": 1
    },
    "model": {
      "type": "string",
      "minLength": 1
    },
    "verdict": {
      "type": "string",
      "enum": [
        "PASS",
        "FAIL"
      ]
    },
    "blocking": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/finding"
      }
    },
    "non_blocking": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/finding"
      }
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "confidence": {
      "type": "string",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "next_action": {
      "type": "string",
      "enum": [
        "proceed",
        "rework",
        "manual_review_required"
      ]
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "raw_output_ref": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "schema_version",
    "task_id",
    "model",
    "verdict",
    "blocking",
    "non_blocking",
    "summary",
    "confidence",
    "next_action",
    "generated_at",
    "raw_output_ref"
  ],
  "$defs": {
    "finding": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "detail": {
          "type": "string",
          "minLength": 1
        },
        "file_path": {
          "type": "string"
        },
        "line": {
          "type": "integer",
          "minimum": 1
        },
        "severity": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        }
      },
      "required": [
        "code",
        "title",
        "detail",
        "severity"
      ]
    }
  }
}
