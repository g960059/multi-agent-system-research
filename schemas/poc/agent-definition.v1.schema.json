{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/poc/agent-definition.v1.schema.json",
  "title": "Agent Definitions v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "const": 1
    },
    "defaults": {
      "$ref": "#/$defs/agentDefaults"
    },
    "agents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/agent"
      }
    }
  },
  "required": [
    "version",
    "agents"
  ],
  "$defs": {
    "envMap": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[A-Z_][A-Z0-9_]*$"
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "retry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_attempts": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "max_attempts"
      ]
    },
    "timeouts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "soft_sec": {
          "type": "integer",
          "minimum": 1
        },
        "hard_sec": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "soft_sec",
        "hard_sec"
      ]
    },
    "agentDefaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "input_schema_ref": {
          "type": "string",
          "minLength": 1
        },
        "output_schema_ref": {
          "type": "string",
          "minLength": 1
        },
        "spawn_policy": {
          "type": "string",
          "enum": [
            "per_task_process",
            "long_running"
          ]
        },
        "max_concurrency": {
          "type": "integer",
          "minimum": 1
        },
        "lease_ttl_sec": {
          "type": "integer",
          "minimum": 1
        },
        "retry": {
          "$ref": "#/$defs/retry"
        },
        "timeouts": {
          "$ref": "#/$defs/timeouts"
        }
      }
    },
    "agent": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-]{2,63}$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "role": {
          "type": "string",
          "enum": [
            "reviewer",
            "aggregator",
            "orchestrator"
          ]
        },
        "provider": {
          "type": "string",
          "enum": [
            "codex",
            "claude",
            "local"
          ]
        },
        "model": {
          "type": "string",
          "minLength": 1
        },
        "prompt_file": {
          "type": "string",
          "minLength": 1
        },
        "input_schema_ref": {
          "type": "string",
          "minLength": 1
        },
        "output_schema_ref": {
          "type": "string",
          "minLength": 1
        },
        "allowed_message_types": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "task_assignment",
              "review_result",
              "aggregation_result",
              "error",
              "control"
            ]
          }
        },
        "spawn_policy": {
          "type": "string",
          "enum": [
            "per_task_process",
            "long_running"
          ]
        },
        "max_concurrency": {
          "type": "integer",
          "minimum": 1
        },
        "lease_ttl_sec": {
          "type": "integer",
          "minimum": 1
        },
        "retry": {
          "$ref": "#/$defs/retry"
        },
        "timeouts": {
          "$ref": "#/$defs/timeouts"
        },
        "env": {
          "$ref": "#/$defs/envMap"
        },
        "command_template": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": [
        "id",
        "name",
        "role",
        "provider",
        "model",
        "prompt_file",
        "allowed_message_types",
        "command_template"
      ]
    }
  }
}
